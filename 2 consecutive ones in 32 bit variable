
class cons;
  rand bit [31:0] a;
  constraint c1{$countones(a)==2;
                (a & a>>1)!=0;}
  function void post_randomize();
    $display("a= %032b",a);
  endfunction
endclass

cons c;
module top;
  initial begin 
    c=new();
    repeat(10)begin
    assert(c.randomize());
    end
  end
endmodule

//op
// a= 00000000000000000000000000001100
// # a= 00000000000000000000000000000011
# a= 00000000001100000000000000000000
# a= 11000000000000000000000000000000
# a= 00000000000110000000000000000000
# a= 00000000000000000000000000001100
# a= 00000000000000000000000011000000
# a= 00000000000000000000000000011000
# a= 00000000000000000000000000000011
# a= 00000000000000110000000000000000
